---
import { basics } from '@cv';

interface Props {
	title: string;
}

const { title } = Astro.props;
const { name, label, summary } = basics;
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content={summary} />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<title>{title} {name} | {label}</title>
	</head>
	<body class='container mx-auto max-w-4xl p-8 sm:px-16'>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: 'Roboto Mono Variable', theme('fontFamily.mono');
		font-size: 16px;
		@apply scroll-smooth tracking-tight text-secondary dark:bg-neutral-800 dark:text-neutral-400;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		@apply text-balance text-gray-800 dark:text-white;
	}

	h1,
	h2,
	h3 {
		@apply font-semibold;
	}

	h4,
	h5,
	h6 {
		@apply font-bold;
	}

	h1 {
		@apply text-4xl;
	}
	h2 {
		@apply text-3xl;
	}
	h3 {
		@apply text-2xl;
	}
	h4 {
		@apply text-xl;
	}
	h5 {
		@apply text-lg;
	}
	h6 {
		@apply text-base;
	}

	p {
		@apply text-pretty text-sm font-light;
	}
</style>

<script>
	if (
		localStorage.theme === 'dark' ||
		(!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
	) {
		document.documentElement.classList.add('dark');
		document.querySelector('ninja-keys')?.classList.add('dark');
	} else {
		document.documentElement.classList.remove('dark');
		document.querySelector('ninja-keys')?.classList.remove('dark');
	}
</script>
