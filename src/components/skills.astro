---
import { Image } from 'astro:assets';

// Data
import { skills } from '@cv';

// Components
import Section from '@/layouts/Section.astro';
---

<!-- todo: [Front] Jose Luis Parra [2024-02-27 22:18:09] Agregar color segun theme -->
<Section title='Habilidades' id='skills'>
	<div class='flex flex-wrap gap-2'>
		{
			skills.map(i => (
				<Image
					class='rounded-md border border-secondary/25'
					title={i.name}
					src={`https://img.shields.io/badge/${i.name}-gray?logo=${i.icon}&logoColor=${i.color}&style=for-the-badge`}
					alt={i.name}
					inferSize={true}
					loading='lazy'
				/>
			))
		}
	</div>
</Section>

